<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Apptheme" parent="Theme.AppCompat.Light.DarkActionBar">
        //Customisation du style
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/FloozText</item>
        <item name="android:buttonStyle">@style/FloozButton</item>
    </style>

    <style name="FloozText" parent="@style/TextAppearance.AppCompat">
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FloozText.Title">
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="FloozButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>
</resources>
